<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrintActivity1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp1bg1"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/temp1bg1"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <TextView
                        android:id="@+id/textViewtemp1bg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Default Text"
                        android:textColor="#E91E63"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@android:color/transparent" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp1bg2"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/temp1bg2"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <TextView
                        android:id="@+id/textViewtemp1bg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Default Text"
                        android:textColor="#E91E63"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@android:color/transparent" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp1bg3"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/temp1bg3"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <TextView
                        android:id="@+id/textViewtemp1bg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Default Text"
                        android:textColor="#F2F2F2"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@android:color/transparent" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp1bg4"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/temp1bg4"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <TextView
                        android:id="@+id/textViewtemp1bg4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Default Text"
                        android:textColor="#E91E63"
                        android:textSize="14dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@android:color/transparent" />

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
