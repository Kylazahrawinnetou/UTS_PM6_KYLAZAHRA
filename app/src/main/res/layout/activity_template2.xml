<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemplateActivity1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp2bg1"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/temp2bg1"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <EditText
                        android:id="@+id/editTexttemp2bg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✧ HAPPY BIRTHDAY ✧\nTO THE BRIGHTEST STAR"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:textColor="#673AB7"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp2bg2"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:paddingTop="30dp"
                        android:src="@drawable/temp2bg2"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <EditText
                        android:id="@+id/editTexttemp2bg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="From : Michie\n\nI’m so glad we met and became friends\nYour laughter brightens my days\nand I cherish every moment we share"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:textColor="#673AB7"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp2bg3"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:paddingTop="30dp"
                        android:src="@drawable/temp2bg3"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <EditText
                        android:id="@+id/editTexttemp2bg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="17dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:text="⍟ ✵ 🕸️ ♕ ☆"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp2bg4"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:paddingTop="30dp"
                        android:src="@drawable/temp2bg4"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <EditText
                        android:id="@+id/editTexttemp2bg4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="17dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:text="بَارَكَ اللَّهُ فِي عُمْرِك\nMay this year bring you endless joy and fulfillment\nI hope every day is filled with blessings, love\nand happiness\n\nOnce again,\nHAPPY BIRTHDAY GEORGEUS"
                        android:textColor="#4A05AF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
