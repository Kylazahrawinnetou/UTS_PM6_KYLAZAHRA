<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrintActivity3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp3bg1"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/temp3bg1"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <TextView
                        android:id="@+id/textViewtemp3bg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:paddingTop="32dp"
                        android:singleLine="false"
                        android:text="Default Text"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp3bg2"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/temp3bg2"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <TextView
                        android:id="@+id/textViewtemp3bg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="Default Text"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:singleLine="false"
                        android:textColor="#673AB7"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp3bg3"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/temp3bg3"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <TextView
                        android:id="@+id/textViewtemp3bg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="Default Text"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:singleLine="false"
                        android:textColor="#673AB7"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp3bg4"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/temp3bg4"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <TextView
                        android:id="@+id/textViewtemp3bg4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:text="Default Text"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:singleLine="false"
                        android:textColor="#673AB7"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>