<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemplateActivity1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp1bg1"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/temp1bg1"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <EditText
                        android:id="@+id/editTexttemp1bg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HAPPY BIRTHDAY\nSWEET GIRL"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:textColor="#E91E63"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:hint="Enter greeting" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp1bg2"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:paddingTop="30dp"
                        android:src="@drawable/temp1bg2"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <EditText
                        android:id="@+id/editTexttemp1bg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:hint="Enter greeting"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:layout_marginTop="17dp"
                        android:text="From : Michie\n\nI’m so glad we met and became friends\nYour laughter brightens my days\nand I cherish every moment we share"
                        android:textColor="#E91E63"
                        android:textSize="14sp"
                        android:textStyle="normal"/>

                </FrameLayout>

                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                <ImageView
                    android:id="@+id/temp1bg3"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingTop="30dp"
                    android:src="@drawable/temp1bg3"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/image_desc" />

                    <EditText
                        android:id="@+id/editTexttemp1bg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="17dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:hint="Enter greeting"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:text="✾ ❀ ❁ ❃ ⚜"
                        android:textColor="#F2F2F2"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/temp1bg4"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:paddingTop="30dp"
                        android:src="@drawable/temp1bg4"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/image_desc" />

                    <EditText
                        android:id="@+id/editTexttemp1bg4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="17dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:hint="Enter greeting"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:text="بَارَكَ اللَّهُ فِي عُمْرِك\nMay this year bring you endless joy and fulfillment\nI hope every day is filled with blessings, love\nand happiness\n\nOnce again,\nHAPPY BIRTHDAY GEORGEUS"
                        android:textColor="#E91E63"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </FrameLayout>

                <Button
                    android:id="@+id/buttonprint1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#E9B4C8"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="Print Card"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
